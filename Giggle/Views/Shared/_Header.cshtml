    var animationEnabled = Environment.GetEnvironmentVariable("ANIMATION_ENABLE")?.ToUpper() == "TRUE";
    var editorEnabled = Environment.GetEnvironmentVariable("EDITOR_ENABLE")?.ToUpper() == "TRUE";
}

